<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="16dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_moreDetail_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_bar_chart_24" />


    <TextView
        android:id="@+id/txt_moreDetail_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:padding="4dp"
        android:text="نمودار قیمت "
        android:textColor="@color/lightblack"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_moreDetail_chart"
        app:layout_constraintEnd_toStartOf="@+id/img_moreDetail_chart"
        app:layout_constraintTop_toTopOf="@+id/img_moreDetail_chart" />

    <ImageView
        android:id="@+id/img_moreDetail_compare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_moreDetail_share"
        app:srcCompat="@drawable/ic_baseline_compare_24" />

    <TextView
        android:id="@+id/txt_moreDetail_compare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:padding="4dp"
        android:text="مقایسه محصول "
        android:textColor="@color/lightblack"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_moreDetail_compare"
        app:layout_constraintEnd_toStartOf="@+id/img_moreDetail_compare"
        app:layout_constraintTop_toTopOf="@+id/img_moreDetail_compare" />

    <ImageView
        android:id="@+id/img_moreDetail_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"

        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_moreDetail_chart"
        app:srcCompat="@drawable/ic_baseline_share_24" />

    <TextView
        android:id="@+id/txt_moreDetail_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:padding="4dp"
        android:text="اشتراک گذاری محصول "
        android:textColor="@color/lightblack"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_moreDetail_share"
        app:layout_constraintEnd_toStartOf="@+id/img_moreDetail_share"
        app:layout_constraintTop_toTopOf="@+id/img_moreDetail_share" />
</androidx.constraintlayout.widget.ConstraintLayout>