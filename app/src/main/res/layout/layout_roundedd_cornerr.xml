<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        tools:rcProgress="0.7"
        app:rcMax="5"
        android:id="@+id/view_detain_roundCornerProgressbar"
        app:rcRadius="10dp"
        app:rcProgressColor="@color/purple_500"
        app:rcBackgroundColor="@color/gray_200"
        app:rcAnimationEnable="true"
        android:layout_weight="0.7"
        app:rcAnimationSpeedScale="4.5"
        android:layout_height="20dp"
        android:layout_width="0dp"/>


    <TextView
        android:id="@+id/txt_detail_titleRatingItem"
        android:layout_width="0dp"
        android:layout_marginLeft="4dp"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="0.3"
        android:layout_height="wrap_content"
        tools:text="نوآوری"
        tools:layout_editor_absoluteX="323dp"
        tools:layout_editor_absoluteY="29dp" />
</LinearLayout>