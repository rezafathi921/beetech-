<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Home.HomeFragment">


   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/frameLayout"
           android:layout_width="match_parent"
           android:background="@color/white"
           android:layout_height="match_parent"
           tools:context=".Home.HomeFragment">

           <EditText
               android:id="@+id/edt_home_serch"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="8dp"
               android:layout_marginTop="4dp"
               android:layout_marginEnd="8dp"
               android:background="@drawable/shape_home_for_serch_box"
               android:ems="10"
               android:gravity="right"
               android:inputType="textPersonName"
               android:padding="4dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <ImageView
               android:layout_marginRight="8dp"
               android:id="@+id/imgV_home_showTextInSerch"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_outline_search_24"
               app:layout_constraintBottom_toBottomOf="@+id/edt_home_serch"
               app:layout_constraintEnd_toEndOf="@+id/edt_home_serch"
               app:layout_constraintTop_toTopOf="@+id/edt_home_serch"
               app:tint="@color/lightblack" />

           <TextView
               android:textSize="15sp"
               android:id="@+id/textView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginEnd="16dp"
               android:text="@string/textSerchInHome"
               app:layout_constraintBottom_toBottomOf="@+id/edt_home_serch"
               app:layout_constraintEnd_toStartOf="@+id/imgV_home_showTextInSerch"
               app:layout_constraintTop_toTopOf="@+id/edt_home_serch" />

           <ImageView
               android:id="@+id/imageView2"
               android:layout_width="wrap_content"
               android:layout_height="30dp"
               android:src="@drawable/logo_serch_final"
               app:layout_constraintBottom_toBottomOf="@+id/edt_home_serch"
               app:layout_constraintEnd_toStartOf="@+id/textView"
               app:layout_constraintTop_toTopOf="@+id/edt_home_serch" />

           <FrameLayout
               android:id="@+id/frameLayout2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="6dp"
               app:layout_constraintTop_toBottomOf="@+id/edt_home_serch"
               tools:layout_editor_absoluteX="3dp">

               <androidx.viewpager2.widget.ViewPager2
                   android:layoutDirection="rtl"
                   android:id="@+id/viewPager_home_slider"
                   android:layout_width="match_parent"
                   android:layout_height="210dp" />

               <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                   android:id="@+id/dots_indicator"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="bottom|start"
                   android:layout_marginStart="16dp"
                   android:layout_marginBottom="16dp"
                   app:dotsColor="@color/gray_200"
                   app:dotsCornerRadius="8dp"
                   app:dotsSize="8dp"
                   app:dotsSpacing="4dp"
                   app:dotsWidthFactor="2"
                   app:progressMode="false"
                   app:selectedDotColor="@color/lightblack" />


           </FrameLayout>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/rv_home_showCatItem"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:layoutDirection="rtl"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />


           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/rv_home_showAmazing"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:clipToPadding="false"
               android:layout_marginTop="16dp"
               android:padding="16dp"
               android:layoutDirection="rtl"
               android:background="?colorPrimary"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/rv_home_showCatItem" />



       </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>