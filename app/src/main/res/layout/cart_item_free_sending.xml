<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ry_cartItem_sendree"
        android:layout_width="375dp"
        android:layout_height="120dp"
        android:background="@drawable/shape_comparelist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_cartItem_showTruckSide"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/truck"
            app:tint="@color/purple_500" />

        <TextView
            android:id="@+id/text_cartItem_titleFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/img_cartItem_showTruckSide"
            android:padding="8dp"
            android:text="ارسال رایگان سفارش"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_cartItem_textMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_cartItem_showTruckSide"
            android:layout_alignParentRight="true"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            android:text="سفارش های بالای 300 هزار تومان"
            android:textColor="@color/gray_700"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img_cartItem_trukFree"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/truck_free" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>